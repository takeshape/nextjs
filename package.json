{
  "name": "@takeshape/nextjs",
  "version": "0.1.0",
  "keywords": [
    "takeshape",
    "nextjs",
    "utils"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist",
  "bin": {
    "takeshape-get-branch-url": "./dist/get-branch-url.js",
    "takeshape-post-checkout": "./dist/post-checkout.js",
    "takeshape-prepare-env": "./dist/prepare-env.js"
  },
  "files": [
    "dist/post-checkout.d.ts",
    "dist/post-checkout.js",
    "dist/get-branch-url.d.ts",
    "dist/get-branch-url.js",
    "dist/prepare-env.d.ts",
    "dist/prepare-env.js"
  ],
  "scripts": {
    "build": "del-cli dist && tsc -p tsconfig.build.json",
    "format": "eslint src --fix",
    "prepare": "npm run build",
    "release": "np",
    "test": "npm run format && vitest run",
    "watch": "vitest"
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "typescript": {}
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "capitalized-comments": "off",
      "no-console": "error",
      "no-unreachable": "error"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "**/*.tsx"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
          "ecmaVersion": "latest",
          "sourceType": "module"
        },
        "extends": [
          "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
          "@typescript-eslint/no-explicit-any": "off"
        }
      },
      {
        "files": [
          "*.json"
        ],
        "plugins": [
          "json-format"
        ]
      },
      {
        "files": [
          "*.mdx",
          "*.md"
        ],
        "settings": {
          "mdx/code-blocks": false,
          "mdx/language-mapper": {}
        },
        "extends": "plugin:mdx/recommended",
        "rules": {
          "indent": "off"
        }
      }
    ]
  },
  "eslintIgnore": [
    "tsconfig.json",
    "dist"
  ],
  "dependencies": {
    "chalk": "^5.2.0",
    "dotenv": "^16.0.3",
    "graphql-request": "^5.2.0",
    "inquirer": "^9.1.4",
    "simple-git": "^3.16.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json-format": "^2.0.1",
    "eslint-plugin-mdx": "^2.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "next": "^13.0.2",
    "np": "^7.6.2",
    "prettier": "^2.7.1",
    "type-fest": "^3.1.0",
    "typescript": "^4.9.4",
    "vitest": "^0.24.5"
  },
  "engines": {
    "node": "^12.19.0 || ^14.15.0 || ^16.13.0 || ^18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
